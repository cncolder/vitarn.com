{
    "apps": [{
        "env": {
            "DEBUG": "app:*,koa:*",
            "DEBUG_COLORS": 1,
            "HOST": "0.0.0.0",
            "NODE_ENV": "development",
            "PORT": 3000,
        },
        "env_production": {
            "DEBUG": "app:*",
            "HOST": "127.0.0.1",
            "NODE_ENV": "production",
            "PORT": 8081,
        },
        "ignore_watch": [
            "[\\/\\\\]\\./",
            ".babel",
            ".git",
            "client",
            "node_modules",
            "gulpfile",
            "public",
            "src",
            "test",
            "views"
        ],
        "instances": "1",
        "name": "vitarn.com",
        "script": ".",
        "watch": false
    }],
    "deploy": {
        "production": {
            "host": "vitarn.com",
            "path": "/var/www/vitarn.com",
            "post-deploy": "cnpm install --production --unsafe-perm --no-bin-links ; pm2 startOrRestart ecosystem.json --env production ; cnpm prune",
            "ref": "origin/master",
            "repo": "https://github.com/cncolder/vitarn.com.git",
            "user": "root"
        }
    }
}
